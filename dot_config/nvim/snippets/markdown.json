{
  "Hugo Custom Post": {
    "prefix": "hpost",
    "body": [
      "---",
      "title: \"${1:Post Title}\"",
      "slug: ${1/ /-/g/l}",
      "description: ${2:Engage Blinder Mode}",
      "date: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}T${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}+01:00",
      "type: posts",
      "draft: true",
      "categories:",
      "  - ${3:Personal}",
      "tags:",
      "  - ${4:tag}",
      "series:",
      "  - \"${5:Series Name}\"",
      "---",
      "",
      "$0"
    ],
    "description": "Custom Hugo frontmatter for Unmasking Autism series"
  },
  "Hugo Figure": {
    "prefix": "hfig",
    "body": [
      "{{< figure src=\"${1:/images/example.jpg}\" title=\"${2:Caption}\" alt=\"${3:Alt Text}\" >}}"
    ],
    "description": "Hugo figure shortcode"
  },
  "Hugo Internal Link": {
    "prefix": "hrel",
    "body": [
      "{{< relref \"${1:filename.md}\" >}}"
    ],
    "description": "Hugo relative reference shortcode"
  },
  "Hugo Notice": {
    "prefix": "hnote",
    "body": [
      "{{% notice ${1:note} %}}",
      "${0:content}",
      "{{% /notice %}}"
    ],
    "description": "Hugo notice/alert shortcode"
  }
}
